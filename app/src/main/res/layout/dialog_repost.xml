<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/bgColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repost"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/textMain"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>

    <!-- Simple Repost Option -->
    <LinearLayout
        android:id="@+id/simpleRepostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/retweet"
            app:tint="@color/textMain"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repost"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textMain"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share to your followers"
                android:textSize="14sp"
                android:textColor="@color/textSec"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Quote Repost Option (Coming Soon) -->
    <LinearLayout
        android:id="@+id/quoteRepostLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/linear_edit"
            app:tint="@color/textMain"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quote"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textMain"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add your thoughts (Coming Soon)"
                android:textSize="14sp"
                android:textColor="@color/textSec"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Cancel Button -->
    <Button
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/textMain"
        android:background="@drawable/button_background_outlined"
        android:layout_marginTop="16dp"
        style="@style/Widget.Material3.Button.OutlinedButton"/>

</LinearLayout>
