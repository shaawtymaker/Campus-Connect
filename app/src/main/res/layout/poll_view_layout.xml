<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <!-- Poll Option 1 -->
    <LinearLayout
        android:id="@+id/poll_option_1_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background_outlined"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/poll_option_1_text"
            style="@style/Base.Widget.AppCompat.TextView.TextMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Option 1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/poll_option_1_percentage"
            style="@style/Base.Widget.AppCompat.TextView.TextSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:visibility="gone"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Poll Option 2 -->
    <LinearLayout
        android:id="@+id/poll_option_2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background_outlined"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/poll_option_2_text"
            style="@style/Base.Widget.AppCompat.TextView.TextMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Option 2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/poll_option_2_percentage"
            style="@style/Base.Widget.AppCompat.TextView.TextSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:visibility="gone"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Poll Option 3 (Optional) -->
    <LinearLayout
        android:id="@+id/poll_option_3_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background_outlined"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/poll_option_3_text"
            style="@style/Base.Widget.AppCompat.TextView.TextMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Option 3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/poll_option_3_percentage"
            style="@style/Base.Widget.AppCompat.TextView.TextSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:visibility="gone"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Poll Option 4 (Optional) -->
    <LinearLayout
        android:id="@+id/poll_option_4_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_background_outlined"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/poll_option_4_text"
            style="@style/Base.Widget.AppCompat.TextView.TextMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Option 4"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/poll_option_4_percentage"
            style="@style/Base.Widget.AppCompat.TextView.TextSec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:visibility="gone"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Poll Footer -->
    <TextView
        android:id="@+id/poll_total_votes"
        style="@style/Base.Widget.AppCompat.TextView.TextSec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 votes"
        android:textSize="12sp"
        android:layout_marginTop="4dp" />

</LinearLayout>
